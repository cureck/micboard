{
  "name": "micboard",
  "version": "1.0.0",
  "description": "An intelligent mic tray for ethernet enabled Shure microphones.",
  "main": "main.js",
  "scripts": {
    "server": "python micboard.py",
    "binary": "pyinstaller micboard.spec",
    "build": "node node_modules/webpack/bin/webpack.js --progress --hide-modules --config=webpack.config.js",
    "app": "electron .",
    "pack": "electron-builder --dir -c.mac.identity=null",
    "dist": "electron-builder"
  },
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/karlcswanson/mictray.git"
  },
  "author": "karlcswanson@gmail.com",
  "bugs": {
    "url": "https://github.com/karlcswanson/mictray/issues"
  },
  "homepage": "https://github.com/karlcswanson/micboard",
  "dependencies": {

  },
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-react": "^7.0.0",
    "css-loader": "^1.0.0",
    "electron": "^2.0.7",
    "file-loader": "^2.0.0",
    "style-loader": "^0.23.0",
    "webpack": "^4.20.2",
    "@ibm/plex": "^1.1.3",
    "babel-cli": "^6.26.0",
    "babel-loader": "^8.0.4",
    "babel-preset-react-app": "^3.1.2",
    "bootstrap": "^4.1.2",
    "jquery": "^3.3.1",
    "npm": "^6.4.0",
    "popper.js": "^1.14.3",
    "qrcode": "^1.2.2",
    "react": "^16.5.2",
    "react-dom": "^16.5.2",
    "smoothie": "^1.35.0",
    "webpack-cli": "^3.1.2",
    "@json-editor/json-editor": "^1.2.1"
  },
  "build": {
    "appId": "your.id",
    "asar": true,
    "asarUnpack": [
      "dist/micboard",
      "build/iconTemplate.png",
      "build/iconTemplate@2x.png"
    ],
    "mac": {
      "category": "your.app.category.type",

      "extendInfo" : {
        "LSBackgroundOnly": 1,
        "LSUIElement": 1
      }
    },
    "files": [
      "dist/micboard",
      "main.js",
      "build/iconTemplate.png",
      "build/iconTemplate@2x.png"
    ]
  }
}
